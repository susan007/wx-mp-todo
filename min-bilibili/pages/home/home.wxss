/* pages/home/home.wxss */
.nav-bar{
  white-space: nowrap;
  font-size: 32rpx;
}

.nav-item{
  display: inline-block;
  padding: 20rpx 32rpx;
}

.active{
  border-bottom: 8rpx solid pink;
}

.video-item {
  width: 48%;
  margin-bottom: 20rpx;
}

.video-wrap {
  display: flex;
  flex-wrap: wrap;
  padding: 10rpx 10rpx;
  justify-content: space-between;
}

.video-img{
  position: relative;
}

.video-img .video-info{
  display: flex;
  justify-content: space-around;
  position: absolute;
  left: 0;
  bottom: 8rpx;
  width: 100%;
  color: #fff;
  font-size: 20rpx;
}

.video-img-image {
  width: 100%;
  border-radius: 16rpx;
}